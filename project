#include <stdio.h>

#define STUDENT_RATE 0.10
#define SENIOR_RATE 0.15
#define PWD_RATE 0.20
#define MINOR_RATE 0.05

int main() {
    char con;
    int ans;
    float tAm, tPay, discAm;

    do {
        do {
            printf("Greetings Customer!\nWe have an ANNIVERSARY SALE for a month.\n\n");
            printf("** PLEASE CHOOSE: **\n");
            printf("[1] - STUDENT\n[2] - SENIOR CITIZEN\n[3] - PWD\n[4] - MINOR\n[0] - QUIT\n");
            printf("Choose from above (0-4): ");
            scanf("%d", &ans);

            if (ans > 4 || ans < 0) {
                printf("Wrong option.\n\n");
            }
        } while (ans > 4 || ans < 0);

        if (ans != 0) {
            printf("Enter total amount purchased: ");
            scanf("%f", &tAm);

            switch (ans) {
                case 1:
                    discAm = tAm * STUDENT_RATE;
                    break;
                case 2:
                    discAm = tAm * SENIOR_RATE;
                    break;
                case 3:
                    discAm = tAm * PWD_RATE;
                    break;
                case 4:
                    discAm = tAm * MINOR_RATE;
                    break;
            }

            tPay = tAm - discAm;

            printf("Total Discount of the Customer: %.2f\n", discAm);
            printf("TOTAL AMOUNT TO BE PAID: %.2f\n", tPay);
            printf("Another Customer? (Y/N): ");
            con = getche();  // It will directly go to another costumer or stop.
            printf("\n\n");
        }

    } while (toupper(con) == 'Y' && ans != 0);

    printf("GOODBYE!!! Please come again. :)\n");

    return 0;
}
